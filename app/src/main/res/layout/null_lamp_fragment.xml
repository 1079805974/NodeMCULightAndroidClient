<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/info_warn"
            android:drawableStart="@drawable/ic_info_24dp"
            android:drawableTint="@color/info_warn"
            android:text="没有灯的连接"
            android:textSize="25sp"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:background="@color/newPrimary"
            android:backgroundTint="@color/newPrimary"
            android:textColor="#FFFFFF"
            android:drawableStart="@drawable/ic_light_32dp"
            android:drawableTint="@color/newPink"
            android:textSize="20sp"
            android:gravity="center"
            android:text="点击右上角图标添加智能灯"/>

    </android.support.v7.widget.LinearLayoutCompat>



</FrameLayout>